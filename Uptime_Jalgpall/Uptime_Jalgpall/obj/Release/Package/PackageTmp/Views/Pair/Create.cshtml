@model Uptime_Jalgpall.Models.Pair

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="danger">
        @ViewBag.Error
    </div>

    <div class="form-horizontal">
        <h4>Pair</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                Team 1: @Html.DropDownList("Team1")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                Team 2: @Html.DropDownList("Team2")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                Team 1 Scored:  @Html.EditorFor(model => model.Team1Scored)
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                Team 2 Scored:  @Html.EditorFor(model => model.Team2Scored)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                Tournament: @Html.DropDownList("tournaments")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
